{
  "ts-node": {
    "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "node"
    }
  },
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "/src/*": [
        "src/*"
      ],
      "/@src/*": [
        "src/*"
      ],
      "/@status/*": [
        "src/packages/status/*"
      ],
      "/@cli/*": [
        "src/packages/cli/*"
      ],
    }
  },
  "include": [
    "src",
    "vite-env.d.ts",
    "frontend",
    "openapi-config.cts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}